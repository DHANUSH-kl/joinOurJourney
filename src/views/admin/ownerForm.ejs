<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/nav.css">
    <title>Document</title>
</head>
<body>

    <nav>
        <div class="logo">
            <h3>LOGO</h3>
        </div>
        <div class="trips-nav">
            <a href="/">ALL TRIPS</a>
        </div>
        <div class="user-nav">
            <% if(!currUser){ %>
                <a href="/user/signup">SIGN UP</a>
                <a href="/user/signin">SIGN IN</a>
            <% } %>

            <% if(currUser){ %>
                <a href="/user/logout">LOG OUT</a>
            <% } %>
            <div class="user" id="user">
                <i class="fa-regular fa-user"></i>
            </div>
        </div>

        <div class="dropdown-container" id="dropdown">
            <div class="close">
                <i class="fa-solid fa-xmark" id="close"></i>
            </div>
            <div class="user-info-container">
                <% if(!currUser) { %>
                    <div class="profile"></div>
                    <p>USERNAME</p>    
                <% } else { %>
                    <div class="profile"></div>
                    <p><%= currUser.username %></p> 
                <% } %>
            </div>
            <div class="nav-links">
                <a href="/mytrips">MY TRIP</a>
                <a href="/createtrip">CREATE TRIP</a>
                <a href="/">PAYMENTS AND PAYOUTS</a>
                <a href="/user/signup">SIGN UP</a>    
            </div>
        </div>
    </nav>

    <form action="/admin/owner" method="POST">
        <div>
            <input type="text" name="secret" id="secret" class="secret">
            <label for="email">Enter secret</label>    
        </div>
        <button>Submit</button>

    </form>
</body>
</html>